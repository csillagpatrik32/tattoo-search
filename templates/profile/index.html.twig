{% extends 'base.html.twig' %}

{% block title %}{{user.fullName ~ title_separator ~ site_name }}{% endblock %}

{% block body %}
    <h2>{{ 'Profile'|trans }}</h2>
    <table class="table">
        <tbody>

        <tr>
            <td colspan="2"><a href="{{ path('profile_update') }}">{{ 'Profile update'|trans }}</a> ~
            <a href="{{ path('profile_password') }}">{{ 'Password change'|trans }}</a></td>
        </tr>

        {% for key,val in profileData %}

            <tr>
                <th scope="row">{{ key|trans }}</th>
                <td>{{ val }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>
{% endblock %}